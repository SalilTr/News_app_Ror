<!-- app/views/news_articles/edit.html.erb -->
<h1>Edit News Article</h1>

<%= form_with model: @news_article, url: news_article_path(@news_article), method: :patch do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :sub_topic %>
    <%= form.text_field :sub_topic %>
  </div>

  <div>
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, direct_upload: true %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.fields_for :category do |category_form| %>
      <%= category_form.label :category_id %>
      <%= category_form.text_field :id %>
    <% end %>
  </div>

  <div>
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
